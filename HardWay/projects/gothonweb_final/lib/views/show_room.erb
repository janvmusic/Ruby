<h1><%= room.name %></h1>

<pre>
    <%= room.description %>
</pre>

<% if room.name == 'death' %>    
    <p> 
        <pre> <%= room.message %> </pre>
        <a href="/"> Play again?</a>
    </p>
<% elsif room.name == 'Laser Weapon Armory' %>
    <% $count = 0 %>
    <% while $count < 10 do %>
        <%= $count %>
        <% $count = $count + 1 %>
    <% end %>
    
<% else %>
    <p>
        <form action "/game" method="POST">
            - <input type="text" name="action">
            <input type="SUBMIT">
        </form>
    </p>
<% end %>